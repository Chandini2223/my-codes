def fibonacci_sequence(n):
    """Generates the Fibonacci sequence up to n terms."""
    if n <= 0:
        return []
    if n == 1:
        return [0]
    
    # Start with the first two terms
    sequence = [0, 1]
    
    # Generate the rest of the terms
    while len(sequence) < n:
        next_term = sequence[-1] + sequence[-2] # Sum of the last two terms
        sequence.append(next_term)
        
    return sequence

# Example usage
terms = 10
fib_list = fibonacci_sequence(terms)
print(f"Fibonacci sequence ({terms} terms): {fib_list}")
