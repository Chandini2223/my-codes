def read_file_content(filename="data.txt"):
    """Reads and returns the entire content of a specified text file."""
    try:
        # 'r' mode opens the file for reading. The 'with' statement ensures closure.
        with open(filename, 'r') as file:
            content = file.read()
            return content
    except FileNotFoundError:
        return f"Error: The file '{filename}' was not found."
    except Exception as e:
        return f"An error occurred: {e}"

# To test this, create a file named 'data.txt' with some content.

