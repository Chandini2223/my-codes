def find_max(data_list):
    """Finds the maximum element in a list of numbers."""
    if not data_list:
        return None  # Return None for an empty list
    
    max_val = data_list[0]
    for item in data_list:
        if item > max_val:
            max_val = item
    return max_val

# Example usage
mountain_heights = [4, 7, 6, 3, 1]
tallest = find_max(mountain_heights)
print(f"The tallest mountain height is: {tallest}")
