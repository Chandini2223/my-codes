#include <stdio.h>
#include <stdlib.h>

#define MOD 1000000007
#define MAX 200005   // for double values (2 * nums[i])

int main() {
    int n;
    scanf("%d", &n);

    int *nums = (int*)malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) scanf("%d", &nums[i]);

    long long left[MAX] = {0};
    long long right[MAX] = {0};

    for (int i = 0; i < n; i++)
        right[nums[i]]++;

    long long ans = 0;

    for (int j = 0; j < n; j++) {
        right[nums[j]]--;

        int target = nums[j] * 2;
        if (target < MAX)
            ans = (ans + left[target] * right[target]) % MOD;

        left[nums[j]]++;
    }

    printf("%lld\n", ans % MOD);
    return 0;
}
